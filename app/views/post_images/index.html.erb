<div class="container">
    <div class="row">
      <%= link_to 'New Post Image', new_post_image_path %>
    <p id="notice"><%= notice %></p>

    <% @post_images.each do |post_image| %>
      <div class="flex">
        <div class="username-location">
          <strong><%= post_image.user.name %></strong><br>
          <span class="glyphicon glyphicon-map-marker"></span> <%= post_image.location %>
        </div>

        <div class="posted-content">
          <%= attachment_image_tag post_image, :image, :fill, 598, 598 %>
        </div>

        <div class="caption">
          <strong><%= post_image.user.name %></strong> <%= post_image.caption %>
        </div>
      </div>
    <% end %>
  </div>
</div>
