<div class="container">
    <div class="row">
    <p id="notice"><%= notice %></p>

    <table>
      <thead>
        <tr>
          <th>Image</th>
          <th>Caption</th>
          <th>Location</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>

    <div class="flex">
      <% @post_images.each do |post_image| %>
        <%= post_image.image_id %>
        <%= post_image.caption %>
        <%= post_image.location %>
        <%= post_image.user_id %>
      <% end %>
    </div>

      <tbody>
        <% @post_images.each do |post_image| %>
          <tr>
            <td><%= post_image.image_id %></td>
            <td><%= post_image.caption %></td>
            <td><%= post_image.location %></td>
            <td><%= post_image.user_id %></td>
            <td><%= link_to 'Show', post_image %></td>
            <td><%= link_to 'Edit', edit_post_image_path(post_image) %></td>
            <td><%= link_to 'Destroy', post_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Post Image', new_post_image_path %>
  </div>
</div>
