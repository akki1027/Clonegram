<div class="container">
  <div class="login-box">
    <h1 class="login-logo">Clonegram</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
       <div class="field">
        <%= f.text_field :name, autofocus: true, placeholder:"  Username", class:"text-field" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder:"  Password", class:"text-field" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class:"login-btn, btn-info" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>