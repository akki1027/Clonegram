<div class="container">
  <div class="sign-up-box">
    <h1>Clonegram</h1>
    <div class="sign-up-message">
      <h4>Sign up to see photos and videos from your friends.</h4>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.text_field :name, autofocus: true, placeholder:"  Username", class:"text-field" %>
      </div>

      <div class="field">
        <%= f.email_field :email, autocomplete: "email", placeholder:"  Email", class:"text-field" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder:"  Password ", class:"text-field" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"  Password", class:"text-field" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:"btn-primary" %>
      </div>
    <% end %>

    <h5>Have an account? <a href="/users/sign_in">Log in</span></h5>
  </div>
</div>

